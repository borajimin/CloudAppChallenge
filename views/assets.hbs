<div class="search">
  <h1>Type in a valid public URL and retrieve images and videos.</h1>
  <form action="/" method="post">
    <input class="searchbar" type="text" name="url" value="" />
    <input type="submit" value="Retrieve Assets" />
  </form>
</div>
<div class="result">
  <h1>{{url}}</h1>
  <h1>images</h1>
  <div class="medias">
    {{#each images}}
    <div class="image media">{{title}}
      <img src="{{source}}" max-height="300" max-width="300" />
    </div>
    {{/each}}
  </div>
  <h1>videos</h1>
  <div class="medias">
    {{#each videos}}
    <div class="media">
      <video height="300" width="300" autoplay>
        {{#each sources as |item index|}}
        <source src="{{item}}" />
        {{/each}}
      </video>
    </div>
    {{/each}}
  </div>
</div>
